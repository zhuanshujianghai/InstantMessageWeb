@{
    ViewData["Title"] = "Message Page";
}

<div class="container">
    <div class="row">
        <div class="col-2">User</div>
        <div class="col-4"><input type="text" id="myUserInput" /></div>
    </div>
    <div class="row">
        <div class="col-3">
            <input type="button" id="registerButton" value="注册" />
        </div>
    </div>
    <hr />
    <div id="userList"></div>
    <hr />
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">User</div>
        <div class="col-4"><input type="text" id="userInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-3">
            <input type="button" id="sendButton" value="发送信息" />
        </div>
        <div class="col-3">
            <input type="button" id="sendAllButton" value="广播信息" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>
@section Scripts{
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/message.js"></script>
}
